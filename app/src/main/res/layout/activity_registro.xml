<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorLightPrimary"
    android:orientation="vertical"
    android:padding="12dp"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".RegistroActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="540dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="2dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="2dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:cardBackgroundColor="#EB5454"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Registrate"
                        android:textAlignment="center"
                        android:textSize="30dp"
                        android:layout_marginTop="5dp"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="473dp"
                    android:layout_marginTop="55dp"
                    app:cardBackgroundColor="#FDFDFD"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="18dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginEnd="18dp"
                            app:boxStrokeColor="#FF0000"
                            app:hintTextAppearance="@style/Hint">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/txtNombreCompletoR"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:hint="Nombre Completo"
                                android:inputType="textPersonName"
                                android:paddingTop="15dp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="18dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="100dp"
                            android:layout_marginEnd="18dp"
                            app:boxStrokeColor="#FF0000"
                            app:hintTextAppearance="@style/Hint"/>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="18dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="180dp"
                            android:layout_marginEnd="18dp"
                            app:boxStrokeColor="#FF0000"
                            app:hintTextAppearance="@style/Hint">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/txtPassR"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:hint="Contraseña"
                                android:inputType="textPassword"
                                android:paddingTop="15dp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="18dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="255dp"
                            android:layout_marginEnd="18dp"
                            android:layout_marginBottom="40dp"
                            app:boxStrokeColor="#FF0000"
                            app:hintTextAppearance="@style/Hint">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/txtPass2R"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:hint="Confirmar Contraseña"
                                android:inputType="textPassword"
                                android:paddingTop="15dp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="18dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="105dp"
                            android:layout_marginEnd="18dp"
                            android:layout_marginBottom="1dp"
                            app:boxStrokeColor="#FF0000"
                            app:hintTextAppearance="@style/Hint">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/txtCorreoR"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:hint="Correo Institucional"
                                android:inputType="textEmailAddress"
                                android:paddingTop="15dp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <mehdi.sakout.fancybuttons.FancyButton
                            android:id="@+id/btnCrearCuenta"
                            android:layout_width="200dp"
                            android:layout_height="48dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="80dp"
                            android:layout_marginTop="330dp"
                            android:layout_marginEnd="80dp"
                            android:layout_marginBottom="34dp"
                            fancy:fb_defaultColor="#E72121"
                            fancy:fb_focusColor="#E90000"
                            android:textColor="#FFFFFF"
                            android:text="Crear Cuenta"
                            fancy:fb_radius="15dp"
                            fancy:fb_borderWidth="1dp"
                            fancy:fb_borderColor="#FFFFFF"/>

                        <TextView
                            android:id="@+id/LblPregunta"
                            android:layout_width="215dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginEnd="1dp"
                            android:layout_marginTop="402dp"
                            android:layout_toStartOf="@+id/btnVolverInicio"
                            android:background="#00FFFFFF"
                            android:text="¿Ya posees una cuenta?"
                            android:textAlignment="textEnd"
                            android:textSize="11dp" />

                        <TextView
                            android:id="@+id/btnVolverInicio"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginEnd="25dp"
                            android:layout_marginTop="400dp"
                            android:background="#00FFFFFF"
                            android:onClick="IrInicio"
                            android:text="Iniciar sesión"
                            android:textAlignment="textEnd"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="13dp" />

                        <ImageView
                            android:id="@+id/txtTrans2"
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="430dp"
                            app:srcCompat="@drawable/logocompleto" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>